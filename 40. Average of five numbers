using System;

class Program
{
    static void Main()
    {
        // Declare an array to store 5 numbers
        double[] numbers = new double[5];
        double sum = 0;

        // Input the five numbers
        Console.WriteLine("Enter 5 numbers to calculate the average:");
        for (int i = 0; i < 5; i++)
        {
            Console.Write("Enter number " + (i + 1) + ": ");
            numbers[i] = Convert.ToDouble(Console.ReadLine());
            sum += numbers[i];  // Add each number to the sum
        }

        // Calculate the average
        double average = sum / 5;

        // Output the result
        Console.WriteLine("The average of the entered numbers is: " + average);
    }
}
